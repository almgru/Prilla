server.port = <PORT>

# Username to use for database
spring.datasource.username = <DB USERNAME>
# Password to use for database
spring.datasource.password = <DB PASSWORD>

spring.security.user.name = <WEB USERNAME>
spring.security.user.password = <WEB PASSWORD>

# Uncomment this if you intend to run snustrack from behind a reverse proxy
#server.forward-headers-strategy = FRAMEWORK

# Comment these lines out if you do not intend on using the Android app
server.servlet.session.timeout = 30d
server.servlet.session.cookie.max-age = 30d

spring.datasource.url = jdbc:h2:file:./data/data
spring.datasource.driverClassName = org.h2.Driver
spring.jpa.database-platform = org.hibernate.dialect.H2Dialect
spring.jpa.hibernate.ddl-auto = update
spring.security.user.roles = manager
snustrack.js.uri = /js/snustrack.js
snustrack.css.uri = /css/snustrack.css
{
  "name": "snustrack-frontend-css",
  "version": "0.1.0",
  "description": "Styling and layout for snustrack frontend",
  "scripts": {
    "build": "sass --load-path ./node_modules/reset-css/ ./src/entry.scss:./out/snustrack.css",
    "watch": "sass --load-path ./node_modules/reset-css/ --watch --poll ./src/entry.scss:./out/snustrack.css",
    "serve": "http-server ./out -p 8082 -c-1",
    "dev": "npm-run-all --parallel watch serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/almgru/snustrack.git"
  },
  "author": "Daniel Alm Grundstr√∂m <daniel.alm.grundstrom@protonmail.com> (https://github.com/almgru)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/almgru/snustrack/issues"
  },
  "homepage": "https://github.com/almgru/snustrack#readme",
  "devDependencies": {
    "http-server": "^0.12.3",
    "npm-run-all": "^4.1.5",
    "reset-css": "^5.0.1",
    "sass": "^1.32.8"
  }
}
